    <% @gardens.each do |garden| %>
      <div class="col-4 mb-3">
        <%= link_to garden_path(garden) do %>
          <div class="card-trip">
            <img src="<%= garden.banner_url %>" />
            <div class="card-trip-infos">
              <div>
                <h2><%= garden.name %></h2>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
